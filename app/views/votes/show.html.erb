<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h1> <%=@post.title%> - <%=link_to @post.link, @post.link%>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      <h2>Add a comment:</h2>
      <%= form_for([@post, @post.comments.build]) do |f| %>
      <div class="field">
        <%= f.label :commenter %><br />
        <%= f.text_field :commenter %>
      </div>
      <div class="field">
        <%= f.label :body %><br />
        <%= f.text_area :body %>
      </div>
      <div class="actions">
        <%= f.submit %>
      </div>
      <% end %>
    </div>
  </div>
</div>